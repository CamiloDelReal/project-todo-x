<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/setCollapsed"
        app:constraintSetStart="@+id/setExpanded">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/scrollDetails"
            app:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/setExpanded">

        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/detail_task_toolbar_expanded"/>

        <Constraint
            android:id="@+id/txvTitleExpanded"
            android:layout_width="0dp"
            android:layout_height="@dimen/detail_task_title_height_expanded"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:layout_marginBottom="@dimen/detail_task_title_margin_bottom_expended"
            android:layout_marginStart="@dimen/detail_task_title_margin_start_expended"
            android:layout_marginEnd="@dimen/detail_task_title_margin_end_expended"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="@id/toolbar">
            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="@dimen/detail_task_title_text_size_expanded" />
        </Constraint>

        <Constraint
            android:id="@+id/txvTitleCollapsed"
            android:layout_width="0dp"
            android:layout_height="@dimen/detail_task_title_height_collapsed"
            android:layout_marginEnd="@dimen/detail_task_title_margin_end_collapsed"
            app:layout_constraintEnd_toStartOf="@id/btnMoreOptions"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            android:alpha="0.0"
            app:layout_constraintTop_toTopOf="@id/btnBack">
            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="@dimen/detail_task_title_text_size_collapsed" />
        </Constraint>

        <Constraint android:id="@+id/progressbar">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>


    <ConstraintSet android:id="@+id/setCollapsed">

        <Constraint
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/detail_task_toolbar_collapsed" />

        <Constraint
            android:id="@+id/txvTitleExpanded"
            android:layout_width="0dp"
            android:layout_height="@dimen/detail_task_title_height_expanded"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            android:layout_marginBottom="@dimen/detail_task_title_margin_bottom_expended"
            android:layout_marginStart="@dimen/detail_task_title_margin_start_expended"
            android:layout_marginEnd="@dimen/detail_task_title_margin_end_expended"
            android:alpha="0.0"
            app:layout_constraintStart_toStartOf="@id/toolbar">
            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="@dimen/detail_task_title_text_size_expanded" />
        </Constraint>

        <Constraint
            android:id="@+id/txvTitleCollapsed"
            android:layout_width="0dp"
            android:layout_height="@dimen/detail_task_title_height_collapsed"
            android:layout_marginEnd="@dimen/detail_task_title_margin_end_collapsed"
            app:layout_constraintEnd_toStartOf="@id/btnMoreOptions"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            android:alpha="1.0"
            app:layout_constraintTop_toTopOf="@id/btnBack">
            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="@dimen/detail_task_title_text_size_collapsed" />
        </Constraint>

        <Constraint android:id="@+id/progressbar">
            <PropertySet
                app:applyMotionScene="false"
                app:visibilityMode="ignore" />
        </Constraint>

    </ConstraintSet>

</MotionScene>