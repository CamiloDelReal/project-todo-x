<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SwitchImportant" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
        <item name="colorAccent">@color/important</item>
    </style>

    <style name="CategoryDetailsTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Popup.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">@dimen/popup_more_options_button_padding</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
        <item name="android:textColor">@color/text_button_check_menu</item>
        <item name="backgroundTint">@color/bg_button_check_menu</item>
    </style>

    <style name="Popup.Section" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingHorizontal">@dimen/popup_more_options_section_padding</item>
    </style>

    <style name="Popup.Button.Check" parent="Popup.Button">
        <item name="android:checkable">true</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:paddingEnd">@dimen/popup_more_options_button_padding_with_check</item>
    </style>

    <style name="Popup.Button.Radio" parent="Popup.Button">
        <item name="android:checkable">true</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:paddingEnd">@dimen/popup_more_options_button_padding_with_check</item>
    </style>

    <style name="TextView.Legend" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.8</item>
    </style>

</resources>