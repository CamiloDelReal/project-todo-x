<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:cardBackgroundColor="@color/red_500"
        app:cardCornerRadius="@dimen/context_button_corner_radius"
        app:strokeWidth="@dimen/context_button_stroke_width">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:src="@drawable/ic_delete"
                tools:tint="?attr/colorOnPrimarySurface" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_space_small" />

            <TextView
                android:id="@+id/txvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Delete"
                tools:textColor="?attr/colorOnPrimarySurface"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>